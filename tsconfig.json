{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["resources/js/**/*", "resources/types/**/*"],
  "exclude": ["node_modules", "public/build"]
}
